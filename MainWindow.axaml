<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Inventory_system_1.Views.MainWindow"
        Title="Inventory System"
        Width="800"
        Height="500">

    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,*,Auto,Auto">

        <!-- Headers -->
        <TextBlock Text="Queued Orders" Grid.Column="0" Margin="10" FontWeight="Bold"/>
        <TextBlock Text="Processed Orders" Grid.Column="1" Margin="10" FontWeight="Bold"/>

        <!-- Lists -->
        <ListBox x:Name="QueuedOrdersList" Grid.Row="1" Grid.Column="0" Margin="10"/>
        <ListBox x:Name="ProcessedOrdersList" Grid.Row="1" Grid.Column="1" Margin="10"/>

        <!-- Buttons & Revenue -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="ProcessButton" Content="Process Next Order" Width="180" Margin="10"/>
            <TextBlock Text="Total Revenue:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBlock x:Name="RevenueText" Text="0 DKK" VerticalAlignment="Center" FontWeight="Bold" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Status -->
        <TextBlock x:Name="StatusMessages"
                   Grid.Row="3" Grid.ColumnSpan="2"
                   Margin="10"
                   Text="System ready."
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"/>
    </Grid>
</Window>